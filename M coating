  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Mobile menu toggle
      const menuToggle = document.querySelector('.menu-toggle');
      const navMenu = document.querySelector('nav ul');
      
      if (menuToggle) {
        menuToggle.addEventListener('click', function() {
          navMenu.classList.toggle('show');
        });
      }
      
      // Quote form functionality
      const form = document.getElementById('quoteForm');
      const coatingCheckboxes = document.querySelectorAll('input[name="coatingType"]');
      const gamazineQtyInput = document.getElementById('gamazineQty');
      const glamourcoatQtyInput = document.getElementById('glamourcoatQty');
      const quoteSummary = document.getElementById('quoteSummary');
      
      // Show/hide quantity inputs based on coating selection
      coatingCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
          if (this.id === 'gamazine' && this.checked) {
            document.getElementById('gamazineQuantity').style.display = 'block';
          } else if (this.id === 'gamazine' && !this.checked) {
            document.getElementById('gamazineQuantity').style.display = 'none';
            gamazineQtyInput.value = 1;
          }
          
          if (this.id === 'glamourcoat' && this.checked) {
            document.getElementById('glamourcoatQuantity').style.display = 'block';
          } else if (this.id === 'glamourcoat' && !this.checked) {
            document.getElementById('glamourcoatQuantity').style.display = 'none';
            glamourcoatQtyInput.value = 1;
          }
          
          calculateQuote();
        });
      });
      
      // Calculate quote when quantity changes
      if (gamazineQtyInput) {
        gamazineQtyInput.addEventListener('input', calculateQuote);
      }
      if (glamourcoatQtyInput) {
        glamourcoatQtyInput.addEventListener('input', calculateQuote);
      }
      
      function calculateQuote() {
        const gamazineChecked = document.getElementById('gamazine').checked;
        const glamourcoatChecked = document.getElementById('glamourcoat').checked;
        
        if (!gamazineChecked && !glamourcoatChecked) {
          quoteSummary.style.display = 'none';
          return;
        }
        
        let total = 0;
        
        // Calculate Gamazine cost
        if (gamazineChecked) {
          const gamazineQty = parseInt(gamazineQtyInput.value) || 1;
          const gamazinePrice = 270;
          const gamazineTotal = gamazinePrice * gamazineQty;
          total += gamazineTotal;
          
          document.getElementById('gamazineQuote').style.display = 'block';
          document.getElementById('gamazineDetails').textContent = 
            `${gamazineQty} √ó 20L = R${gamazineTotal}`;
        } else {
          document.getElementById('gamazineQuote').style.display = 'none';
        }
        
        // Calculate Glamour Coat cost
        if (glamourcoatChecked) {
          const glamourcoatQty = parseInt(glamourcoatQtyInput.value) || 1;
          const glamourcoatPrice = 370;
          const glamourcoatTotal = glamourcoatPrice * glamourcoatQty;
          total += glamourcoatTotal;
          
          document.getElementById('glamourcoatQuote').style.display = 'block';
          document.getElementById('glamourcoatDetails').textContent = 
            `${glamourcoatQty} √ó 20L = R${glamourcoatTotal}`;
        } else {
          document.getElementById('glamourcoatQuote').style.display = 'none';
        }
        
        // Update total
        document.getElementById('summaryTotal').innerHTML = `<strong>R${total}</strong>`;
        
        quoteSummary.style.display = 'block';
      }
      
      // Form submission handler
      if (form) {
        form.addEventListener('submit', function(e) {
          e.preventDefault();
          
          // Check if at least one coating is selected
          const gamazineChecked = document.getElementById('gamazine').checked;
          const glamourcoatChecked = document.getElementById('glamourcoat').checked;
          
          if (!gamazineChecked && !glamourcoatChecked) {
            alert('Please select at least one coating type.');
            return;
          }
          
          // Validate quantity inputs for selected coatings
          if (gamazineChecked && (!gamazineQtyInput.value || parseInt(gamazineQtyInput.value) < 1)) {
            alert('Please enter a valid quantity for Gamazine.');
            return;
          }
          
          if (glamourcoatChecked && (!glamourcoatQtyInput.value || parseInt(glamourcoatQtyInput.value) < 1)) {
            alert('Please enter a valid quantity for Glamour Coat.');
            return;
          }
          
          // Basic validation for required fields
          const requiredFields = form.querySelectorAll('[required]');
          let valid = true;
          
          requiredFields.forEach(field => {
            if (!field.value.trim()) {
              valid = false;
              field.style.borderColor = '#e74c3c';
            } else {
              field.style.borderColor = '#e0e0e0';
            }
          });
          
          if (!valid) {
            alert('Please fill in all required fields.');
            return;
          }
          
          // Success message
          alert('Thank you! Your quote request has been submitted. We will contact you within 24 hours.');
          form.reset();
          quoteSummary.style.display = 'none';
          document.getElementById('gamazineQuantity').style.display = 'none';
          document.getElementById('glamourcoatQuantity').style.display = 'none';
        });
      }
      
      // Smooth scrolling for anchor links
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
          e.preventDefault();
          
          const targetId = this.getAttribute('href');
          if (targetId === '#') return;
          
          const targetElement = document.querySelector(targetId);
          if (targetElement) {
            window.scrollTo({
              top: targetElement.offsetTop - 80,
              behavior: 'smooth'
            });
            
            // Close mobile menu if open
            if (navMenu.classList.contains('show')) {
              navMenu.classList.remove('show');
            }
          }
        });
      });
    });
  </script>
</body>
</html>
